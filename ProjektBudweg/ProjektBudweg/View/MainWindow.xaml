<Window x:Class="ProjektBudweg.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektBudweg.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900"
        ResizeMode="NoReSize"
        WindowStyle="None"
        Background="#079C4E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>


        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#084016" Grid.ColumnSpan="3" MouseDown="Grid_MouseDown">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Budweg"
                        Foreground="AntiqueWhite"
                        FontSize="25"
                        FontWeight="Medium"
                        Margin="0,0,10,0"
                        Grid.Column="1"
                        Grid.ColumnSpan="3" Click="Button_Click" Height="50" VerticalAlignment="Top">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="D:\GitHub\Projekter\GUI practice\Fonts#Pacifico"/>
                        <Setter Property="Background" Value="Red"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkRed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="125" Height="40"
                                    CornerRadius="8"
                                    Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>



        </Grid>



        <Grid Grid.Column="2"
              Grid.Row="2"
              Margin="160,-365,-810,85"
              Panel.ZIndex="-1">

            <Grid.RenderTransform>
                <RotateTransform Angle="50"/>
            </Grid.RenderTransform>

            <StackPanel Orientation="Horizontal"
                        Margin="-450,250,-255,-250" >
                <StackPanel>
                    <Border Width="700"
                            Height="35"
                            Background="#3DDDC2"
                            Margin="50,0,0,0"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#FC6586"
                            Margin="0,15,30,0"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#383660"
                            Margin="5,15,0,0"
                            CornerRadius="20"/>

                </StackPanel>
                <Grid Grid.Column="1"
              Grid.Row="2">
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,600">
                        <Image Width="200" Height="200" Source="C:\Users\chris\OneDrive\Desktop\Budweg-9\ProjektBudweg\ProjektBudweg\images\BudwegLogo2.png" RenderTransformOrigin="0.5,0.5" Panel.ZIndex="50" >
                            <Image.RenderTransform>
                                <RotateTransform Angle="-50"></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </StackPanel>
                </Grid>


                <StackPanel>
                    <Border Width="700"
                            Height="35"
                            Background="#3DDDC2"
                            Margin="20,0,0,0"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#FC6586"
                            Margin="-40,15,0,0"
                            CornerRadius="20"/>
                    <Border Width="700"
                            Height="35"
                            Background="#383660"
                            Margin="25,15,0,0"
                            CornerRadius="20"/>

                </StackPanel>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="50,0,70,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Anonym" Foreground="White" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" />
                    <CheckBox Content="Ja" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"  Foreground="White" Width="60" FontSize="20" Margin="60,0,0,0"/>
                    <CheckBox Content="Nej" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"  Foreground="White" Width="60" FontSize="20" Margin="20"/>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center" RenderTransformOrigin="0.642,0.556">
                    <TextBlock Text="Navn" Foreground="White" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                    <TextBox TextWrapping="Wrap" Text="" Width="216" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="85,0,00,0">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center" RenderTransformOrigin="0.642,0.556">
                    <TextBlock Text="Efternavn" Foreground="White" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                    <TextBox TextWrapping="Wrap" Text="" Width="216" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="46,0,00,0">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center" RenderTransformOrigin="0.642,0.556">
                    <TextBlock Text="Besked Type" Foreground="White" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                    <ComboBox Text="" Width="216" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,00,0">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center" RenderTransformOrigin="0.642,0.556">
                    <TextBlock Text="Afdeling" Foreground="White" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                    <ComboBox Text="TextBox" Width="216" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="55,0,00,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center" RenderTransformOrigin="0.642,0.556">
                    <TextBlock Text="Dato" Foreground="White" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                    <DatePicker  Text="TextBox" Width="205" VerticalAlignment="Center" Margin="85,0,00,0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center" RenderTransformOrigin="0.642,0.556">
                <TextBlock Text="Beskrivelse" Foreground="White" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                <TextBox TextWrapping="Wrap" Width="216" Height="110" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30,0,00,0">

                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </StackPanel>


    </Grid>

</Window>
